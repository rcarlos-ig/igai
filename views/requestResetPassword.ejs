<%- include('partials/header.ejs'); %>

<div class="card w-[320px] sm:w-1/2 lg:w-1/3">
  <div class="w-full">
    <div>
      <h2>Esqueci minha senha</h2>
      <% if (locals.errors) { %>
        <div class="error <%= errors == '' ? 'hidden' : '' %>">
          <ul>
            <% errors.forEach(error => { %>
              <li><%= error.msg %></li>
            <% }); %>
          </ul>
        </div>
      <% }; %>
      <div>
        <form method="post" action="/resetPassword">
          <div class="form-line">
            <label for="email">E-mail<span class="required">*</span></label>
            <div>
              <div>
                <input type="email" name="email" id="email" placeholder="Digite seu e-mail" autofocus />
              </div>
            </div>
          </div>
          <div class="flex justify-end gap-4 mt-6">
            <button type="button" class="button button-tertiary" onclick="window.location='/login'">Retornar</button>
            <button type="submit" class="button button-primary">Enviar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer.ejs'); %>